             xmlns:local="clr-namespace:KinectUs.Configuration.Utility">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:UtilityBootstrapper x:Key="bootstrapper" />
